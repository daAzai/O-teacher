<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid
                android:color="#CCC"></solid>
            <stroke
                android:width="3dp"
                android:color="#9FA79F"
                android:dashWidth="5dp"
                android:dashGap="2dp"></stroke>
        </shape>
    </item>

    <item
        android:left="3dp"
        android:right="3dp">
        <shape>
            <solid
                android:color="#CCC"></solid>
        </shape>
    </item>
</layer-list>