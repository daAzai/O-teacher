<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="50dp"
        android:text="早读安排"/>

    <Button
        android:id="@+id/early_Monday_button"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-12dp"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:text="周一"/>

    <Button
        android:id="@+id/early_Tuesday_button"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-12dp"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:text="周二"/>
    <Button
        android:id="@+id/early_Wednesday_button"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-12dp"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:text="周三"/>
    <Button
        android:id="@+id/early_Thursday_button"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-12dp"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:text="周四"/>
    <Button
        android:id="@+id/early_Friday_button"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:text="周五"/>

    <Button
        android:id="@+id/early_back_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:text="返回"
        />

</LinearLayout>