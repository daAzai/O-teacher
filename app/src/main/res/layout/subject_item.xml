<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/subject_name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/text_arrange_normal"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/subject_timenum"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/button_arrange_normal_timenum" />

    <TextView
        android:id="@+id/subject_requirements"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/button_arrange_normal_requirements"/>

</LinearLayout>